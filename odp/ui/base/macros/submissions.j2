{% macro render_submission(submission) %}
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <div class="nav-link active py-3 px-4">
                <strong>Title:</strong> {{ submission.title }}
            </div>
        </li>
        {% if submission.link %}
            <li class="nav-item">
                <a class="nav-link" href="{{ submission.link }}" target="_blank">Project Link</a>
            </li>
        {% endif %}
    </ul>

    <div class="tab-content p-4">
        <div class="tab-pane fade show active">
            <p><strong>Intervention Measurement:</strong> {{ submission.intervention_measurement }}</p>
            <p><strong>Description:</strong> {{ submission.description }}</p>
            <p><strong>Implementation Status:</strong> {{ submission.implementation_status }}</p>
            <p><strong>Start Date:</strong> {{ submission.start_date | date }}</p>
            <p><strong>End Date:</strong> {{ submission.end_date | date }}</p>

            <h5>Mitigation Details</h5>
            {% if submission.mitigation %}
                <p><strong>Sector:</strong> {{ submission.mitigation.sector }}</p>
                <p><strong>Project Type:</strong> {{ submission.mitigation.project_type }}</p>
                <p><strong>Carbon Credit:</strong> {{ 'Yes' if submission.mitigation.carbon_credit else 'No' }}</p>
            {% endif %}

            <h5>Adaptation Details</h5>
            {% if submission.adaptation %}
                <p><strong>Sector:</strong> {{ submission.adaptation.sector }}</p>
                <p><strong>Climate Impact:</strong> {{ submission.adaptation.climate_impact }}</p>
                <p><strong>Hazard:</strong> {{ submission.adaptation.hazard }}</p>
            {% endif %}
        </div>
    </div>
{% endmacro %}
